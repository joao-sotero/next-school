<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NEXT school | Login</title>
  <link rel="stylesheet" href="/stylesheets/global.css">
  <link rel="stylesheet" href="/stylesheets/admin-register.css">
</head>
<body>
  <main>
    <section class="container flex-center">
      <div class="login">
          <div class="header-login">
            <h1>Registrar aluno</h1>
            <a href="/admin/selecionar" class="button">
              <img src="/images/icons/Home.svg" alt="Home icon">
            </a>
          </div>
          <form action="/admin/criar/aluno" method="POST" enctype="multipart/form-data">
            <div class="field">
                <div class="icon">
                    <img src="/images/icons/profile.svg" alt="Icone de perfil">
                </div>
                <fieldset class="input">
                  <label for="">Nome completo</label>
                  <input type="text" name="nome_aluno" placeholder="Digite seu nome">
                </fieldset>
            </div>
            <div class="field">
                <div class="icon">
                    <img src="/images/icons/profile.svg" alt="Icone de perfil">
                </div>
                <fieldset class="input">
                    <label for="">CPF</label>
                    <input type="text" id="password" name="cpf" placeholder="Digite seu CPF">
                </fieldset>
            </div>
            <select name="modulo_id" id="appearance-select">
                <option value="" disabled selected>Selecione um m√≥dulo</option>
                <% for( let modulo of modulos ) { %>
                  <option value="<%= modulo.id %>"><%= modulo.nome %></option>
                <% } %>
            </select>
            <div class="input-file">
              <div id="photos-upload">
                <input id="photo-input" type="file" name="img_perfil" accept="image/*" onchange="addPhoto()">
                <p>Enviar avatar</p>
              </div>
          </div>
            <button class="button" type="submit">Registrar</button>
          </form>
      </div> 
    </section>
  </main> 
  <script>
    const input = document.querySelector('#photo-input')
    const p = document.querySelector('.input-file p')

    function addPhoto(event) {
      p.innerText = "Avatar enviado"
    }
  </script>
</body>
</html>
